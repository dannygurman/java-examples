<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd"
>

    <bean id="employeeDao" class="com.baeldung.examples.persistence.jdbc.EmployeeDAO">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${examples.persistence.jdbc.driverClassName}"/>
        <property name="url" value="${examples.persistence.jdbc.url}"/>
        <property name="username" value="${examples.persistence.jdbc.username}"/>
        <property name="password" value="${examples.persistence.jdbc.password}"/>
    </bean>

    <context:property-placeholder location="examples.persistence.jdbc.properties"/>
</beans>